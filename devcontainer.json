{
  "name": "New Relic OTel Collector",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "forwardPorts": [4317, 4318, 8888, 13133],
  "portsAttributes": {
    "4317": {
      "label": "OTLP gRPC",
      "onAutoForward": "notify"
    },
    "4318": {
      "label": "OTLP HTTP",
      "onAutoForward": "notify"
    },
    "8888": {
      "label": "Collector Metrics",
      "onAutoForward": "silent"
    },
    "13133": {
      "label": "Health Check",
      "onAutoForward": "silent"
    }
  },
  "postCreateCommand": "cp .env.example .env && echo 'Copy .env.example to .env and add your New Relic license key'",
  "postStartCommand": "docker compose up -d",
  "secrets": {
    "NEW_RELIC_LICENSE_KEY": {
      "description": "Your New Relic License Key",
      "documentationUrl": "https://one.newrelic.com/admin-portal/api-keys/home"
    }
  }
}
